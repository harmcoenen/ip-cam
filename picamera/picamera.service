[Unit]
Description=Pi Camera
After=network.target

[Service]
ExecStart=/usr/bin/python3 -u /home/pi/github/ip-cam/picamera/run.py
WorkingDirectory=/home/pi/github/ip-cam/picamera
StandardOutput=ile:/home/pi/github/ip-cam/picamera/ip-cam-daemon.log
StandardError=inherit
Restart=always
User=pi

[Install]
WantedBy=multi-user.target
